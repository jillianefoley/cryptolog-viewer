<p id="notice"><%= notice %></p>

<div class="content">
  <div class="container">
    <div class="main">
      <h1><%= @header %></h1>
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Role</th>
          </tr>
        </thead>

        <tbody>
          <% @people.each do |person| %>
            <tr>
              <td><%= link_to person.name, person %></td>
              <td><%= person.role %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
