<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Author:</strong>
  <% if @article.person %>
    <%= link_to @article.person.name, @article.person %>
  <% else %>
    Unknown
  <% end %>
</p>

<p>
  <strong>Type:</strong>
  <%= @article.type %>
</p>

<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>

<p>
  <strong>Issue:</strong>
  <%= link_to @article.issue.name, @article.issue %>
</p>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
