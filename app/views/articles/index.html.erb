<p id="notice"><%= notice %></p>

<h1>Listing Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Type</th>
      <th>Puzzle type</th>
      <th>Text</th>
      <th>Redactions</th>
      <th>Picture</th>
      <th>Redacted</th>
      <th>Page</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.type %></td>
        <td><%= article.puzzle_type %></td>
        <td><%= article.text %></td>
        <td><%= article.redactions %></td>
        <td><%= article.picture %></td>
        <td><%= article.redacted %></td>
        <td><%= article.page %></td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

