<p id="notice"><%= notice %></p>

<div class="content">
  <div class="container">
    <div class="main">
      <h1><%= @header %></h1>
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Number of Articles</th>
          </tr>
        </thead>

        <tbody>
          <% @concepts.each do |concept| %>
            <tr>
              <td><%= link_to concept.name, concept %></td>
              <td><%= concept.articles.count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
