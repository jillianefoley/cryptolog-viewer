<p id="notice"><%= notice %></p>

<h1>
  <%=@issue.name%>
</h1>

<p>
  <strong>Pdf:</strong>
  <%= @issue.pdf %>
</p>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Type</th>
    </tr>
  </thead>

  <tbody>
    <% @issue.articles.each do |article| %>
      <tr>
        <td><%= link_to article.title, article %></td>
        <td>
          <% if article.person %>
            <%= link_to article.person.name, article.person %>
          <% end %>
        </td>
        <td><%= article.type %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_issue_path(@issue) %> |
<%= link_to 'All Issues', issues_path %>
