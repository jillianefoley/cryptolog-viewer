<p id="notice"><%= notice %></p>

<h1>Listing Article Topics</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Top words</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @article_topics.each do |article_topic| %>
      <tr>
        <td><%= article_topic.name %></td>
        <td><%= article_topic.top_words %></td>
        <td><%= link_to 'Show', article_topic %></td>
        <td><%= link_to 'Edit', edit_article_topic_path(article_topic) %></td>
        <td><%= link_to 'Destroy', article_topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

